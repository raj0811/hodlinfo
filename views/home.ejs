    <script>

        function changeTheme() {
            var body=document.querySelector(".body")
            var toggle = document.getElementById("toggle");
            var coinData=document.querySelector(".coin-data");
            var coinList = document.querySelector(".coin-list");
            var coinHead=document.querySelector(".coin-head");
            var nav=document.querySelector(".navi")
            var bar = document.querySelector(".coin-bar")
            var boc=document.querySelector(".head-box")
            if (toggle.checked) {
                document.documentElement.setAttribute("data-theme", "dark");
                nav.classList.add("light")
                coinList.classList.add("light")
                coinHead.classList.add("light")
                body.classList.add("light")
                coinData.classList.add("light")
                // bar.classList.add("light")
                // boc.classList.add("light")
            } else {
                document.documentElement.setAttribute("data-theme", "light");
              
                nav.classList.remove("light")
                coinList.classList.remove("light")
                coinHead.classList.remove("light")
                body.classList.remove("light")
                coinData.classList.remove("light")
                bar.classList.remove("light")


            }
        }


    </script>
   

   <script>
    function refreshPage() {
  location.reload();
}

function startCountdown(duration, display) {
  let timer = duration;

  setInterval(function() {
    display.textContent = timer;

    if (--timer < 0) {
      timer = duration;
      refreshPage();
    }
  }, 1000);
}

window.addEventListener("DOMContentLoaded", function() {
  const countdownElement = document.querySelector(".timer-inner");
  const duration = 60; // Countdown duration in seconds

  startCountdown(duration, countdownElement);
});

   </script>

